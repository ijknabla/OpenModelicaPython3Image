FROM ubuntu:22.04 AS python{version!s}

ENV DEBIAN_FRONTEND=noninteractive
RUN \
    apt-get update \
    && apt-get install -y \
    build-essential libssl-dev zlib1g-dev \
    libbz2-dev libreadline-dev libsqlite3-dev curl git \
    libncursesw5-dev xz-utils tk-dev libxml2-dev libxmlsec1-dev libffi-dev liblzma-dev
RUN \
    mkdir /source \
    && curl -fsSL https://www.python.org/ftp/python/{version!s}/Python-{version!s}.tgz | tar zxf - -C/source --strip-components=1 \
    && cd /source \
    && ./configure --enable-optimizations --without-static-libpython --prefix /build/install \
    && make -j4 \
    && make install
RUN \
    mkdir /artifact \
    && cp -r /build/install /artifact/usr \
    && find /artifact/ -type l | xargs rm
